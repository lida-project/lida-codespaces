{
    "name": "Microsoft LIDA Project",
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "hostRequirements": {
        "cpus": 4
    },
    "waitFor": "onCreateCommand",
    "updateContentCommand": "bash .devcontainer/2-update-content-command.sh",
    "postCreateCommand": "bash .devcontainer/3-post-create-command.sh",
    "customizations": {
        "codespaces": {
            "openFiles": [
                "README.md",
                "notebooks/README.md"
            ]
        },
        "vscode": {
            "extensions": [
                "ms-toolsai.jupyter",
                "ms-python.python"
            ]
        }
    }
}